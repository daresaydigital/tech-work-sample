<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ext="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="ir.sass.domain.model.ResultModel" />

        <variable
            name="viewModel"
            type="ir.sass.movie.ui.fragments.detail.MovieDetailFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ir.sass.base_ui.view.LottieImageView
                    android:id="@+id/lottieImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    ext:url='@{data.poster_path_large}' />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:text='@{"Title : "+ data.title}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lottieImageView" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text='@{"Release date : "+ data.release_date}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_title"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title" />

                <TextView
                    android:id="@+id/txt_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text='@{"Language : "+ data.original_language}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_date"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date" />

                <TextView
                    android:id="@+id/txt_adult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text='@{data.adult?"Not Suitable for kids":"Suitable for kids"}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_lang"
                    app:layout_constraintTop_toBottomOf="@+id/txt_lang" />

                <TextView
                    android:id="@+id/txt_vote_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text='@{"Vote count : "+ data.vote_count}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_adult"
                    app:layout_constraintTop_toBottomOf="@+id/txt_adult" />

                <TextView
                    android:id="@+id/txt_vote_avg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text='@{"Vote average : "+ data.vote_average}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_vote_count"
                    app:layout_constraintTop_toBottomOf="@+id/txt_vote_count" />

                <TextView
                    android:id="@+id/txt_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text='@{"Overview : "+ data.overview}'
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/txt_vote_avg"
                    app:layout_constraintTop_toBottomOf="@+id/txt_vote_avg" />

                <TextView
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/old_rose"
                    android:gravity="center"
                    android:text='@{viewModel.isFavorite?"Delete":"Save"}'
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/txt_overview"
                    app:layout_constraintTop_toBottomOf="@+id/txt_overview"
                    ext:active='@{viewModel.active}'
                    ext:click='@{() -> viewModel.saveOrDelete()}' />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>