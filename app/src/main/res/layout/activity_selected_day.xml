<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:background="@color/blueLight"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_day"
            style="@style/AppTheme.Headline4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/tv_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_scattered_clouds"
            android:tint="@color/lightGrey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_feels_like"
            style="@style/AppTheme.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/rv_temp_min_max"
            style="@style/AppTheme.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/pressure"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_pressure" />

            <TextView
                android:id="@+id/tv_pressure_label"
                style="@style/AppTheme.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/pressure"
                android:text="@string/pressure"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_pressure"
                style="@style/AppTheme.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pressure_label"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/pressure" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/humidity"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_humidity" />

            <TextView
                android:id="@+id/tv_humidity_label"
                style="@style/AppTheme.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/humidity"
                android:text="@string/humidity" />

            <TextView
                android:id="@+id/tv_humidity"
                style="@style/AppTheme.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_humidity_label"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/humidity" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/sunrise"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_sunrise" />

            <TextView
                android:id="@+id/tv_sunrise_label"
                style="@style/AppTheme.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/sunrise"
                android:text="@string/sunrise" />

            <TextView
                android:id="@+id/tv_sunrise"
                style="@style/AppTheme.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sunrise_label"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/sunrise" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/sunset"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_sunset" />

            <TextView
                android:id="@+id/tv_sunset_label"
                style="@style/AppTheme.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/sunset"
                android:text="@string/sunset" />

            <TextView
                android:id="@+id/tv_sunset"
                style="@style/AppTheme.Subtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sunset_label"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/sunset" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>