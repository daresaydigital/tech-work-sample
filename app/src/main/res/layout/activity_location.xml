<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".ui.location.LocationActivity">

    <TextView
        android:id="@+id/tv_locate_city"
        style="@style/AppTheme.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/locate_current_city"
        android:textColor="@color/blueDark" />

    <TextView
        android:id="@+id/tv_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_locate_city"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/chip"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="2dp"
        android:text="@string/locate" />

    <TextView
        android:id="@+id/latLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0.0" />

</RelativeLayout>
