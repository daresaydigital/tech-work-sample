<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:id="@+id/root">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent" android:id="@+id/swipeToRefreshCity">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:background="#ccc">

            <TextView
                    tools:text="5 minutes ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastRefreshDiff"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/line" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/line" android:layout_marginBottom="4dp"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightGray"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:id="@+id/line"
                  app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/sepMaxMin"
                  android:layout_marginTop="64dp"/>
            <TextView
                    tools:text="27\u00B0"
                    android:textSize="80sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentTemp"
                    android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/currentWeatherIcon"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    tools:text="Mostly Clear"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weatherStatus" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/currentTemp"/>
            <TextView
                    tools:text="25\u00B0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minTemp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sepMaxMin"
                    app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/weatherStatus"/>
            <TextView
                    android:text="@string/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sepMaxMin"
                    app:layout_constraintStart_toEndOf="@+id/minTemp" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/maxTemp" app:layout_constraintTop_toTopOf="@+id/minTemp"
                    android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>
            <TextView
                    tools:text="29\u00B0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/maxTemp"
                    app:layout_constraintStart_toEndOf="@+id/sepMaxMin" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/sepMaxMin"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:minHeight="100dp" tools:minWidth="100dp"
                    android:id="@+id/currentWeatherIcon"
                    app:layout_constraintTop_toTopOf="@+id/currentTemp"
                    app:layout_constraintBottom_toBottomOf="@+id/currentTemp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/currentTemp"
                    app:layout_constraintHorizontal_chainStyle="packed"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>
