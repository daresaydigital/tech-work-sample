<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="poster"
            type="com.arashafsharpour.daresaymovie.infrastructure.models.contracts.Posters" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="115dp"
        android:layout_height="170dp"
        app:cardCornerRadius="@dimen/spacing_4"
        android:layout_marginHorizontal="@dimen/spacing_8"
        app:cardElevation="@dimen/spacing_0">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            imageUrl="@{poster.filePath}"/>

    </androidx.cardview.widget.CardView>


</layout>