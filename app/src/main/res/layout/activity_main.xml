<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/mainActivityHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/mainActivityEditTextSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/city_text"
            android:inputType="textPostalAddress"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/mainActivityButtonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_text"
            android:backgroundTint="@color/colorWhite"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/mainActivityBodyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainActivityFooterLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainActivityHeaderLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                android:id="@+id/mainActivityTextViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_text"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wi_day_sunny"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"/>

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewSunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wi_sunrise"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"/>

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewSunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wi_sunset"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"/>

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wi_wind_direction"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wi_celsius_starting_value"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewSunriseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clock_text_neutral"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewSunsetTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clock_text_neutral"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>

                    <com.jonassjoberg.daresay_awesome_weather_app.CustomWeatherTextView
                        android:id="@+id/mainActivityTextViewWindText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wind_text"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/mainActivityFooterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

    </LinearLayout>

    <ProgressBar
        android:id="@+id/mainActivityProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorGrey"/>

</RelativeLayout>