<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/root"
        tools:context=".ui.WeatherActivity">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_city"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="8dp" android:id="@+id/cityBtn"/>
    <TextView
            android:text="@string/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityOrLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_location"
               android:id="@+id/isCurrentLocation"
               app:layout_constraintBottom_toBottomOf="@+id/cityOrLocation"
               app:layout_constraintStart_toEndOf="@+id/cityOrLocation" android:layout_marginStart="8dp"/>

    <TextView
            tools:text="27\u00B0"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentTemp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/cityOrLocation"/>
    <TextView
            tools:text="Mostly Clear"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weatherStatus" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/currentTemp"/>
    <TextView
            tools:text="25\u00B0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minTemp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sepMaxMin"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/weatherStatus"/>
    <TextView
            android:text="@string/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sepMaxMin"
            app:layout_constraintStart_toEndOf="@+id/minTemp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/maxTemp" app:layout_constraintTop_toTopOf="@+id/minTemp"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"/>
    <TextView
            tools:text="29\u00B0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxTemp"
            app:layout_constraintStart_toEndOf="@+id/sepMaxMin" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/sepMaxMin"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:minHeight="100dp" tools:minWidth="100dp"
            android:id="@+id/currentWeatherIcon"
            app:layout_constraintStart_toEndOf="@+id/currentTemp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/currentTemp"
            app:layout_constraintTop_toTopOf="@+id/currentTemp"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/dataAvailable"
                                            app:constraint_referenced_ids="minTemp,currentWeatherIcon,currentTemp,maxTemp,sepMaxMin,weatherStatus"
                                            tools:visibility="visible" android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>