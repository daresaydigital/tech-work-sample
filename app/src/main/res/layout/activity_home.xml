<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/root"
        tools:background="#ccc"
        tools:context=".ui.WeatherActivity">
    <androidx.viewpager.widget.ViewPager android:id="@+id/cityPager" android:layout_width="0dp"
                                         android:layout_height="0dp"
                                         app:layout_constraintTop_toBottomOf="@+id/cityDateTime"
                                         app:layout_constraintStart_toStartOf="parent"
                                         app:layout_constraintEnd_toEndOf="parent"
                                         app:layout_constraintBottom_toBottomOf="parent"
                                         android:layout_marginTop="32dp">
    </androidx.viewpager.widget.ViewPager>

    <com.rd.PageIndicatorView android:id="@+id/pageIndicatorView" android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:piv_radius="4dp"
                              app:layout_constraintTop_toBottomOf="@+id/cityDateTime"
                              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                              android:layout_marginTop="4dp"/>
    <TextView
            android:textColor="@color/black"
            android:text="@string/welcome_message"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/welcomeMessage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/detectLocation"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_city"
               app:layout_constraintStart_toStartOf="parent"
               android:tint="@color/white"
               android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="8dp" android:id="@+id/cityBtn"/>
    <TextView
            android:text="@string/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:id="@+id/cityOrLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:textSize="13sp"
            android:textStyle="italic"
            tools:text="2019/10/06 10:20 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cityDateTime"
            app:layout_constraintTop_toBottomOf="@+id/cityOrLocation"
            app:layout_constraintStart_toStartOf="@+id/cityOrLocation"
            app:layout_constraintEnd_toEndOf="@+id/cityOrLocation"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/dataAvailable"
                                            tools:visibility="visible" android:visibility="gone"
                                            app:constraint_referenced_ids="cityPager,cityOrLocation"/>
    <Button
            android:text="@string/detect_location"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/detectLocation" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityOrLocation"/>
    <Button
            android:padding="4dp"
            android:text="@string/add_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/detectLocation" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detectLocation" tools:visibility="visible"
            android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/noDataAvailable"
                                            app:constraint_referenced_ids="button2,detectLocation,welcomeMessage"
                                            android:visibility="visible" tools:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>