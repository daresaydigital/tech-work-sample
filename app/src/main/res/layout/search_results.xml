<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_holder"
        android:layout_marginEnd="@dimen/margin_med"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_marginStart="@dimen/margin_med"
        android:background="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:dividerHeight="0.0dip"
        android:fadeScrollbars="true"
        android:scrollbarDefaultDelayBeforeFade="100"
        />

    <RelativeLayout
        android:id="@+id/search_loading_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_holder"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginStart="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_med">

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:fontFamily="sans-serif-light"
            android:text="@string/search_no_location_found"
            android:textSize="@dimen/search_results_text_size"
            android:textStyle="normal"
            android:visibility="gone"
            tools:visibility="visible"/>

        <!--<ProgressBar-->
            <!--android:id="@+id/location_search_progress_bar"-->
            <!--style="@android:style/Widget.ProgressBar.Small.Inverse"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="false"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginLeft="@dimen/margin_med"-->
            <!--android:layout_toRightOf="@android:id/empty"-->
            <!--android:visibility="gone" />-->
    </RelativeLayout>
</merge>