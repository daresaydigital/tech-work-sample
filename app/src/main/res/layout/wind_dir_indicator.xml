<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/downloadBtnContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:visibility="visible"
    tools:visibility="visible">

    <FrameLayout
        android:id="@+id/container_wind_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_wind_direction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_wi_wind_deg"
        android:layout_margin="8dp"
        tools:background="@color/colorAccent"
        android:contentDescription="TODO" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView_nord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:text="@string/north" />

    <TextView
        android:id="@+id/textView_south"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:text="@string/south" />

    <TextView
        android:id="@+id/textView_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:text="@string/west" />

    <TextView
        android:id="@+id/textView_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:text="@string/east" />

</RelativeLayout>