<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/toolbar_icon</item>
    </style>

    <style name="AppTheme.SearchView" parent="@style/Widget.AppCompat.SearchView">
        <!-- Layout for query suggestion rows -->
        <item name="suggestionRowLayout">@layout/layout_custom_recent_queries</item>
    </style>


    <style name="WeatherTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WeatherTextStyle.Small" parent="@style/WeatherTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <style name="WeatherTextStyle.Medium" parent="@style/WeatherTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="WeatherTextStyle.Large" parent="@style/WeatherTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="WeatherTextStyle.Huge" parent="@style/WeatherTextStyle">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>


</resources>
