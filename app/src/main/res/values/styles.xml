<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitle" parent="MediumText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Texts-->
    <style name="Text">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/paleWhite</item>
    </style>

    <style name="LargeText" parent="Text">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="SmallText" parent="Text">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MediumText" parent="Text">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>
